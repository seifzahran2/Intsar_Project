@page
@model EmailModel
<form id="profile-form" method="post" enctype="multipart/form-data">
<div class="container">
                <div class="change-page row">
                    <div class="col-sm-12 col-lg-3 col-xl-3">
                        <ul>
                            <li><a asp-area="Identity" asp-page="/Account/Manage/Email"> البريد الالكتروني </a> </li>
                            <li><a asp-area="Identity" asp-page="/Account/Manage/ChangePassword"> الرقم السري </a></li>
                        </ul>
                    </div>
                    <div class="info col-sm-12 col-lg-9 col-xl-9 row" >
                        <div class="img-profile col-sm-12 col-lg-4 col-xl-4">
                                @if (Model.Input.ProfilePic != null)
                                {
                                    
                                    <img id="profilepic" alt="Profile" class="Profile-pic" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePic))"  />
                                }
                                else
                                {
                                    <img src="~/image/profilett.jpg" alt="Profile" class="photo" id="profilepic">
                                }
                                <input accept="image/*" type="file"
                                style="width:300px" asp-for="Input.ProfilePic"
                                class="form-control" id="file"
                                onchange="document.getElementById('profilepic').src=window.URL.createObjectURL(this.files[0])">
                                <label for="file" class="upload">تغيير الصوره</label>
                            </div>
                        <div class="info-group col-sm-12 col-lg-8 col-xl-8">
                                <div class="email">
                                    <label asp-for="Email">البريد الالكتروني</label>
                                    <input asp-for="Email" type="email" id="email" disabled>
                                </div>
                                <div class="email">
                                    <label asp-for="Input.NewEmail" for="">البريد الالكتروني الجديد</label>
                                    <input asp-for="Input.NewEmail" type="email"  id="email" required>
                                </div>
                                <div class="submit">
                                    <input type="submit" asp-page-handler="ChangeEmail" id="submit" value="حفظ">
                                </div>
                         </div>
                    </div>
                </div>
        </div>
        </form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
