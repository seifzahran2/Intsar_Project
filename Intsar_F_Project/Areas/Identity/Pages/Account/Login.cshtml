@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-pic js-tilt" data-tilt>
                        <img src="~/image/img-012.png" alt="IMG">
                    </div>
                    
                    <form class="login100-form validate-form" method="post">
                        <span class="login100-form-title">
                            تسجيل الدخول
                        </span>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="wrap-input100" data-validate = "Valid email is required: ex@abc.xyz">
                            <input asp-for="Input.Email" class="input100" type="text"  placeholder="البريد الابكتروني" required>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
    
                        <div class="wrap-input100 " data-validate = "Password is required">
                            <input asp-for="Input.Password" class="input100" type="password"  placeholder="الرقم السري" required>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>
                        
                        <div class="container-login100-form-btn">
                            <a href="#">
                                <button class="login100-form-btn">
                                    تسجيل الدخول
                                </button>
                            </a>
                        </div>
    
                        <div class="text-center p-t-12">
                            <span class="txt1">
                                تذكر
                            </span>
                            <a class="txt2" >
                                البريد الالكتروني / الرقم السري؟
                            </a>
                        </div>
    
                        <div class="text-center p-t-136">
                            <a asp-area="Identity" asp-page="/Account/Register" class="txt2" >
                                انشاء حساب جديد
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
